# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Rust files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# Lua files (Neovim config)
[*.lua]
indent_style = space
indent_size = 2
max_line_length = 100

# Vim script files
[*.vim]
indent_style = space
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# TOML files
[*.toml]
indent_style = space
indent_size = 2
